<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="academy.lgs.Card" table="card">
		<id name="id" type="int" column="id">
			<generator class="identity" />
		</id>

		<property name="total" column="total" type="string" />
		<property name="name" column="name" type="string" />

		<set name="items" table="card_item" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="card_id" not-null="true"></column>
			</key>
			<many-to-many entity-name="academy.lgs.Item">
				<column name="item_id" not-null="true"></column>
			</many-to-many>
		</set>

	</class>
</hibernate-mapping>